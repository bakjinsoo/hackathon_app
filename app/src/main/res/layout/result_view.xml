<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/result_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="750dp"
        android:fontFamily="@font/bmhanna_pro"
        android:text="."
        android:textSize="20sp"
        android:textColor="#000000"/>
    <ImageView
        android:id="@+id/result_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="130dp"
        android:src="@drawable/red_result"
        >
    </ImageView>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_indicator"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="350dp"
        app:trackThickness="16dp"
        app:trackCornerRadius="16dp"
        android:layout_marginEnd="60dp"
        app:indicatorColor="@color/result_green"
        app:trackColor="@color/grey_light"
        android:progress="80"
        />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="337dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/bmhanna_pro"
        android:text="80%"/>
    <TextView
        android:id="@+id/result_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/bmhanna_pro"
        android:text="검사 결과, 경도의 인지 손상 징후가 \n관찰되었습니다. \n이는 기억력, 집중력, 또는 일상적인 \n인지 기능에서 약간의 어려움이 있을 수 있음을 나타냅니다. 이 단계에서는 조기 개입과 적절한 관리가 중요합니다.\n 더 정확한 평가와 맞춤형 조언을 받기 위해, \n가까운 병원이나 전문의를 방문하실 것을 \n권장드립니다."
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/ai_score_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/bmhanna_pro"
        android:text="AiScore"
        android:textSize="22sp"
        android:textColor="#000000"/>

</FrameLayout>