<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.hackathon_app_ver_1.CircleProgressBar
        android:id="@+id/custom_progressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="top|center_horizontal"
        app:progress="100"
        android:layout_marginTop="40dp"
        app:progressBarThickness="8dp"/>
    <TextView
        android:id="@+id/timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bmhanna_pro"
        android:text="30"
        android:textSize="80sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/interlocking_pentagon"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="250dp"
        android:src="@drawable/interlocking_pentagon">
    </ImageView>
    <TextView
        android:id="@+id/record_exaplain_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/bmhanna_pro"
        android:text="위 그림을 기억해주세요!"
        android:textSize="20sp"
        android:textColor="#000000"/>

</FrameLayout>